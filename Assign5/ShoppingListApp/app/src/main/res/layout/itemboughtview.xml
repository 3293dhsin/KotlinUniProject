<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout_bought"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buy" />

    <TextView
        android:id="@+id/textViewName_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bread"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintLeft_toRightOf="@id/icon_bought"
        app:layout_constraintTop_toTopOf="@+id/icon_bought" />

    <TextView
        android:id="@+id/textViewQty_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty: 1"
        android:textColor="@color/green"
        app:layout_constraintLeft_toLeftOf="@id/textViewName_bought"
        app:layout_constraintTop_toBottomOf="@id/textViewName_bought"
        app:layout_constraintBottom_toBottomOf="@id/icon_bought"/>

    <TextView
        android:id="@+id/textViewSize_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: Default"
        android:textColor="@color/green"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintLeft_toRightOf="@id/textViewQty_bought"
        app:layout_constraintTop_toTopOf="@id/textViewQty_bought"/>

    <TextView
        android:id="@+id/textViewDateTitle_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Date bought: "
        android:textColor="@color/green"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toTopOf="@id/textViewQty_bought"
        app:layout_constraintLeft_toRightOf="@id/textViewSize_bought"/>

    <TextView
        android:id="@+id/textViewDate_bought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22 Aug 2022"
        android:textColor="@color/green"
        app:layout_constraintTop_toTopOf="@id/textViewQty_bought"
        app:layout_constraintLeft_toRightOf="@id/textViewDateTitle_bought"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"
        android:layout_marginVertical="4dp"
        app:layout_constraintTop_toBottomOf="@id/textViewSize_bought"
        app:layout_constraintLeft_toLeftOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>