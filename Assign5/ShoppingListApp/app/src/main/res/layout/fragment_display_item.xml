<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout_display"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayItemFragment">

    <TextView
        android:id="@+id/shoppingitem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shopping Item"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/shoppingitem_box"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:ems="13"
        android:text="1"
        android:paddingHorizontal="10dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintTop_toBottomOf="@id/shoppingitem_title"
        app:layout_constraintLeft_toLeftOf="@id/shoppingitem_title" />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Detail"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="@id/shoppingitem_title"
        app:layout_constraintTop_toBottomOf="@id/shoppingitem_box" />

    <TextView
        android:id="@+id/detail_box"
        android:layout_width="300dp"
        android:layout_height="110dp"
        android:ems="13"
        android:text="1"
        android:paddingHorizontal="10dp"
        android:gravity="start|top"
        android:inputType="textMultiLine"
        android:textStyle="bold"
        android:textSize="18sp"
        android:background="@drawable/edit_text_border"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="2dp"
        app:layout_constraintTop_toBottomOf="@id/detail_title"
        app:layout_constraintLeft_toLeftOf="@id/shoppingitem_title" />

    <TextView
        android:id="@+id/quantity_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity: "
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintStart_toStartOf="@id/shoppingitem_title"
        app:layout_constraintTop_toBottomOf="@id/detail_box" />

    <TextView
        android:id="@+id/quantity_box"
        android:layout_width="51dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="2dp"
        android:background="@drawable/edit_text_border"
        android:ems="13"
        android:paddingHorizontal="10dp"
        android:text="1"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/quantity_title"
        app:layout_constraintTop_toTopOf="@id/quantity_title"/>

    <TextView
        android:id="@+id/size_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size: "
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toRightOf="@id/quantity_box"
        app:layout_constraintTop_toTopOf="@id/quantity_box"/>

    <TextView
        android:id="@+id/size_box"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="2dp"
        android:background="@drawable/edit_text_border"
        android:ems="13"
        android:paddingHorizontal="10dp"
        android:text="Default"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@id/size_title"
        app:layout_constraintTop_toTopOf="@id/size_title"/>

    <TextView
        android:id="@+id/urgent_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Urgent: "
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginVertical="20dp"
        app:layout_constraintLeft_toLeftOf="@id/shoppingitem_title"
        app:layout_constraintTop_toBottomOf="@id/quantity_title"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/checked"
        app:layout_constraintLeft_toRightOf="@id/urgent_title"
        app:layout_constraintTop_toTopOf="@id/urgent_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>