<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Space
        android:id="@+id/spaceView_ID1"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        tools:srcCompat="@tools:sample/avatars"
        android:background="@drawable/borderline"
        android:padding="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/label_textview"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textColor="@color/lightorange"
        android:textStyle="bold"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toTopOf="@id/imageView" />
    <TextView
        android:id="@+id/takenfrom_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Taken From: "
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/grey"
        app:layout_constraintLeft_toLeftOf="@id/label_textview"
        app:layout_constraintTop_toBottomOf="@id/label_textview"/>
    <TextView
        android:id="@+id/source_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Use Real Butter"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/takenfrom_textview"
        app:layout_constraintTop_toTopOf="@id/takenfrom_textview"/>
    <TextView
        android:id="@+id/diettype_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Diet Type: "
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="@id/takenfrom_textview"
        app:layout_constraintTop_toBottomOf="@id/takenfrom_textview"/>
    <TextView
        android:id="@+id/diettype_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Low Carb"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/diettype_title"
        app:layout_constraintTop_toTopOf="@id/diettype_title"/>
    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="INGREDIENTS"
        android:background="@drawable/custombutton"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/diettype_title"
        app:layout_constraintLeft_toRightOf="@id/imageView"
        app:layout_constraintRight_toRightOf="parent" />
    <Space
        android:id="@+id/spaceView_ID"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        app:layout_constraintTop_toBottomOf="@id/imageView"/>
</androidx.constraintlayout.widget.ConstraintLayout>